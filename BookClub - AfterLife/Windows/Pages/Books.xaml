<Page x:Class="BookClub___AfterLife.Books"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookClub___AfterLife"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Books">

    <Grid>
        <DataGrid Margin="0,30,0,30" x:Name="Tablichka"   Loaded="grid_Loaded"
                   DataGrid.CanUserResizeColumns="True"  DataGrid.CanUserResizeRows="False" DataGrid.CanUserAddRows="False" 
                  >
            <DataGrid.ContextMenu>
                <ContextMenu Width="150px" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" >
                    <MenuItem Template="{StaticResource bluLock_Menuitem}"  Header="Удалить выделенное" Click="MenuItem_Click" />
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</Page>
